<%= stylesheet_link_tag    'users', media: 'all', 'data-turbolinks-track' => true %>

<div align="center">
  <h2>Sign up</h2><br>

  <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
    <%= devise_error_messages! %>

    <div class="field">
      <%= f.text_field :name, autofocus: true, placeholder:"Enter your name" %>
    </div>

    <div class="field">
      <%= f.email_field :email, placeholder:"Enter your email" %>
    </div>

    <br>
    <div class="field">
      <%= f.label :password %>
      <% if @minimum_password_length %>
        <em>(<%= @minimum_password_length %> characters minimum)</em>
      <% end %><br />
      <%= f.password_field :password, autocomplete: "off", placeholder:"Enter a password" %>
    </div>

    <div class="field">
      <%= f.label :password_confirmation %><br />
      <%= f.password_field :password_confirmation, autocomplete: "off", placeholder:"Confirm the password" %>
    </div>
    <br>
    <br>

    <div class="actions">
      <%= f.submit "Sign up", :id => 'update' %>
    </div>
  <% end %>

  <%= render "devise/shared/links" %>
</div>
