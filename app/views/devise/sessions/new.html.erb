<%= stylesheet_link_tag    'users', media: 'all', 'data-turbolinks-track' => true %>

<div align="center">
  <h2>Log in</h2>

  <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
    <div class="field">
      <%= f.email_field :email, autofocus: true, placeholder:"Enter your email"  %>
    </div>

    <div class="field">
      <%= f.password_field :password, autocomplete: "off", placeholder:"Enter your password"  %>
    </div>

    <% if devise_mapping.rememberable? -%>
      <div class="field">
        <%= f.check_box :remember_me, :class => 'user_remember_me' %>
        <%= f.label :remember_me %>
      </div>
    <% end -%>

    <div class="actions">
      <%= f.submit "Log in" %>
    </div>
  <% end %>

  <%= render "devise/shared/links" %>
</div>
