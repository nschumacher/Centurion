<%#= stylesheet_link_tag '/css/contact.css', :media => 'all' %>


<div class="jumbotron">
    <h1 style="text-align:center;">Contact the Developers</h1>
    <p style="text-align:center; color: white; text-shadow: 2px 2px black;">Comments, questions, concerns, and anything you'd like to send us goes here!</p>
    <p style="text-align:center; color: white; text-shadow: 2px 2px black;">Expect a response from admin@centurion.com</p>
</div>

<div class="row">
  <div class="col-lg-3"></div>
  <div class="col-lg-6 text-center">
  <%= form_for @message, url: contact_path, remote: true do |message_form| %>
    <fieldset>
      <div class="field">
        <% if user_signed_in? %>
          <%= message_form.text_field :email, :value => current_user.email, class: "form-control" %>
        <% else %>
          <%= message_form.text_field :email, class: "form-control", placeholder: "Email" %>
        <% end %>
      </div>

      <div class="field">
        <%= message_form.text_field :subject, placeholder: "Subject", class: "form-control" %>
      </div>

      <div class="field">
        <%= message_form.text_area :content,style: "margin-top: 10px", placeholder: "Message", id: "comment", rows: 5, class: "form-control"%>
      </div>
    </fieldset>

    <fieldset>
      <div style="margin-top: 10px" class="field col-lg-offset-0 text-left">
        <%= message_form.submit "Send", class: "btn btn-default", :remote => true %>
      </div>
    </fieldset>
  </div>
    <% end %>
    <div class="col-lg-3"></div>
</div>
