<p id="notice"><%= notice %></p>

<div class="row">
  <ol class="breadcrumb">
    <li><a href="/">Dashboard</a></li>
    <li><a href="#">Case ID: <%= @attack.case_id %></a></li>
    <li class="active">Attack ID: <%= @attack.case_id %></li>
  </ol>
  <div class="col-xs-3 col-sm-2">
    <div class="sidebar_nav_container" align="center">
      <div class="sidebar_nav_entry"><a href="/">Dashboard</a></div>
      <div class="sidebar_nav_entry"><a href="/pages/about">About</a></div>
      <div class="sidebar_nav_entry"><a href="/pages/contact">Contact Us</a></div>
    </div>
  </div>

  <div class="col-xs-9 col-sm-10">
    <div class="page_content">
      <!-- Status and URL -->
      <div class="row">
        <div class="col-xs-4" id="status_box">
          <img src="/assets/green_check.png" alt="OK" class="img-circle status_img">
          <span style="margin-left:10px; font-size:1.5em">Status: <%= @attack.status %></span>
        </div>
        <div class="col-xs-8" id="url_box">
          <span style="font-size:1.5em">Url: <%= @attack.url %></span>
        </div>
      </div>

      <!-- Site Traffic & Some Details -->
      <div class="row">
        <div class="col-xs-12 col-sm-5" style="height: 150px">
          <div style="height: 150px; background-color: #202020">
            site traffice box
          </div>
        </div>
        <div class="col-xs-12 col-sm-7">
          <div class="row">
            <div class="col-xs-6">
              Attack ID: <%= @attack.case_id %>
            </div>
            <div class="col-xs-6">
              Date Recorded: <%= @attack.detection_time %>
            </div>
          </div>
          <div class="row">
            <div class="col-xs-6">
              Domain: test.com
            </div>
            <div class="col-xs-6">
              Last Status Check: <%= @attack.detection_time %>
            </div>
          </div>
          <div class="row">
            <div class="col-xs-6">
              Registration Date: 04JUL2016
            </div>
            <div class="col-xs-6">
              Expiry Date: 04JUL2017
            </div>
          </div>
          <div class="row">
            <div class="col-xs-6">
              Target: <%= @attack.client %>
            </div>
            <div class="col-xs-6">
              Function: first page
            </div>
          </div>
        </div>
      </div>


      <!-- <strong>Attack type:</strong>
      <%#= @attack.attack_type %>
      <strong>Detection method:</strong>
      <%#= @attack.detection_method %> -->



      <strong>Notes:</strong>
      <%= @attack.notes %>

      <%= link_to 'Edit', edit_attack_path(@attack) %> |
      <%= link_to 'Back', attacks_path %>
    </div>
  </div>
</div>
