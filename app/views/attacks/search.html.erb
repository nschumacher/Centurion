<p id="notice"><%= notice %></p>

  <div class="row">
    <div class="col-xs-3 col-sm-2">
      <div class="sidebar_nav_container" align="center">
        <div class="sidebar_nav_entry"><a href="/">Dashboard</a></div>
        <div class="sidebar_nav_entry"><a href="/pages/about">About</a></div>
        <div class="sidebar_nav_entry"><a href="/pages/contact">Contact Us</a></div>
      </div>
    </div>

    <div class="col-xs-9 col-sm-10">
      <div class="page_content">
        <div class="row">
          <div class="col-lg-3 col-md-4 col-sm-4 buttons">
            <a class="_button" href="#" role="button">Check Status</a>
            <%= link_to 'New Attack', new_attack_path, :class=>'_button' %>
          </div>
          <div class="col-lg-3 col-md-4 col-sm-4 col-sm-offset-4 col-md-offset-4 col-lg-offset-5">
            <%= form_tag search_attacks_path, method: :get, class: "input-group", style:"width: 100%" do %>
  							<%= button_tag(type: "submit", class: "glyphicon glyphicon-search", id: "search_button") do %>
  							<% end %>
  							<%= text_field_tag :search, params[:search], class:"form-control search_box", placeholder:"Search for a case" %>
  					<% end %>
          </div>
        </div>
        <table class="table table-hover">
          <thead>
            <tr id="header_row">
              <th>Status</th>
              <th><div align="center" style="width:100%">Url</div></th>
              <th>Case ID</th>
              <th>Target</th>
              <th>Detection Time</th>
            </tr>
          </thead>

          <tbody>
            <% @attacks.each do |attack| %>
                <tr class='clickable-row' data-href='/attacks/<%=attack.id%>'>
                  <td><%= attack.status %></td></a>
                  <td align="center"><div class="URL" align="center"><%= attack.url %></div></td>
                  <td><%= attack.case_id %></td>
                  <td><%= attack.client %></td>
                  <td><%= attack.detection_time %></td>
                </tr>
            <% end %>
          </tbody>
        </table>
        <!-- render page links in the view: -->
        <%= will_paginate @posts %>
      </div>
    </div>
  </div>

<script>
  // makes the table rows clickable
  jQuery(document).ready(function($) {
      $(".clickable-row").click(function() {
          window.document.location = $(this).data("href");
      });
  });
</script>
